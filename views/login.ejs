<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>valmigo | Login</title>
    <link rel="stylesheet" href="/style/stylesheet.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
</head>
<body>
    <header class="header" id="header">
        <%- include('includes/menu') %>
    </header>
    <main class="main" id="main">
        <section class="login" id="login">
            <div class="formError" id="formError">
                
            </div>
            <form action="/dashboard" method="POST" class="login__form" id="form">
                <div class="login__contentName">
                    <div class="login__user">
                        <label for="" class="label__login">User</label>
                        <input type="text" class="login__input input__user" placeholder="User" required>
                    </div>
                    <div class="login__password">
                        <label for="" class="label__login">Password</label>
                        <input type="password" class="login__input input__password flex" placeholder="Password " required > 
                    </div>
                </div>

                <div class="login__showPw ">
                    <span class="flex showPw">
                        <p>Show password</p>
                    <img src="../img/eye.svg" alt=""> 
                    </span>
                    
                </div>
                

                <div class="register__btn">
                    <button class="btn loginBtn" type="submit">Login</button>
                </div>
            </form>
        </section>
        <%- include('includes/footer') %>
    </main>
    <script src="../js/menu.js"></script>
    <script src="../js/login.js"></script>
</body>
</html>